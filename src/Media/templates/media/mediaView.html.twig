{% extends '@layout/default.html.twig' %}
{% set pageHeader = post.name | default('Новости') %}

{% block title %}
    {{ pageHeader }}
{% endblock %}

{% block pageHeader %}
    {{ include('@layout/components/_pageHeader.twig') }}
{% endblock %}

{% block sidebar %}
    {{ include('@media/components/_sidebar.twig') }}
{% endblock %}

{% block content %}
    <div class="col-xs-12 col-md-9">
        {{ include('@media/components/_breadcrumb.twig') }}
        <div class="row">
            <div class="{{ post.image ? 'col-md-9' : 'col-md-12' }}">
                {{ post.contentHtml | raw }}
                <p class="text-muted">
                    <small>
                        <em>{{ post.timestamp | date('d.m.Y') ~ ' г.' }}</em>
                    </small>
                </p>
            </div>
            {% if post.image is defined and post.image != '' %}
                <div class="col-md-3 hidden-sm hidden-xs">
                    <div class="thumbnail">
<<<<<<< HEAD
                        <img src="{{ post.image }}"
                             alt="{{ post.name }}">
=======
                        <img src="{{ post.image }}" alt="{{ post.name }}">
>>>>>>> master
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}