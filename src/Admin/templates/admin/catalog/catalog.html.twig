{% extends '@layout/defaultAdmin.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('admin.catalog.category') }}">Категории</a>
        </div>
        <div class="col-md-4">
            <a href="">Продукты</a>
        </div>
        <div class="col-md-4">
            <a href="">Архив</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <ul id="accordion" aria-multiselectable="true">
                {% include '@admin/catalog/_category_list_tree.twig' with {'categories' : categories} %}
            </ul>
        </div>
        <div class="col-md-3">
            {% if categoriesOneChildren is defined %}
                <ul>
                    {% for cat in categoriesOneChildren %}
                        <li>
                            <a class="collapseIn" href="#collapse{{ cat.id }}">{{ cat.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascriptBottom %}
    <script src="{{ asset('js/scrollto/jquery.scrollTo.min.js') }}"></script>
{% endblock %}

