{% extends '@layout/defaultAdmin.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block stylesheets %}
    <style>
        .full-screen-height {
            max-height: calc(100vh - 200px);
        }

        .affix .full-screen-height {
            overflow: auto;
        }
    </style>
{% endblock %}

{% block navbarItem %}
    <li>
        <a href="{{ path('admin.catalog.category') }}">
            <i class="fa fa-list"></i> Категории
        </a>
    </li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <ul id="accordion" aria-multiselectable="true">
                {% include '@admin/catalog/_category_list_tree.twig' with {'categories' : categories} %}
            </ul>
        </div>
        <div class="col-md-4">
            <div class="panel-group affix" id="accordionList" role="tablist" aria-multiselectable="true">
                {% include '@admin/catalog/_category_list_one_children.twig' %}
                {% include '@admin/catalog/_category_list_double.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptBottom %}
    <script src="{{ asset('js/scrollto/jquery.scrollTo.min.js') }}"></script>
{% endblock %}

