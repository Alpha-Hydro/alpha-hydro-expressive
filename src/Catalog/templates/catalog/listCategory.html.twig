{% extends '@layout/default.html.twig' %}
{% set pageHeader =  currentCategory.name %}

{% block title %}Каталог Продукции - {{ currentCategory.name }}{% endblock %}

{% block pageHeader %}
    {{ include('@layout/components/_pageHeader.twig') }}
{% endblock %}

{% block sidebar %}
    {{ include('@layout/components/catalog/_sidebar.twig') }}
{% endblock %}

{% block content %}
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4">
                <h2>
                    <a href="/catalog/{{ category.fullPath }}">
                        <i class="fa fa-refresh"></i> {{ category.name }}
                    </a>
                </h2>
            </div>
        {% endfor %}
    </div>

{% endblock %}