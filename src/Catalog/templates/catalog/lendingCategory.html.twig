{% extends '@layout/default.html.twig' %}

{% block title %}Каталог{% endblock %}

{% block content %}
    <div class="row">
        <h1>Каталог продукции</h1>
        {% for category in categories %}

            <div class="col-md-4">
                <h2>
                    <a href="/catalog/{{ category.fullPath }}">
                        <i class="fa fa-refresh"></i> {{ category.name }}
                    </a>
                </h2>
            </div>
        {% endfor %}
    </div>

{% endblock %}