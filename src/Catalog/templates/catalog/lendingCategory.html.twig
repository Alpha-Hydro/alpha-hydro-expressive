{% extends '@layout/default.html.twig' %}

{% block stylesheets %}
<style>
    .categories-list{
        display: flex;
        flex-wrap: wrap;
    }
    .categories-item{
        margin: 10px;
        padding: 0 5px;
        flex: 1 1 calc(25% - 20px);
    }

    .categories-list {
        margin: 0 auto;
        max-width: calc(100%);
    }

    .categories-item{
        background-color: #fff;
        box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
    }

    .categories-tem-name{
        text-align: center;
        font-size: 1.4rem;
        font-weight: normal;
        color: #525252;
        padding: 10px 10px 25px 10px;
    }

</style>
{% endblock %}

{% block title %}Каталог{% endblock %}

{% block pageHeader %}
    {{ include('@layout/components/_pageHeader.twig') }}
{% endblock %}

{% block sidebar %}
    {{ include('@layout/components/catalog/_sidebar.twig') }}
{% endblock %}

{% block content %}
    <div  class="col-xs-12 col-sm-12 col-md-9">
        <div class="row">
            <div class="categories-list">
                {% for category in categories %}
                    <div class="categories-item text-center">
                        <a href="{{ path('catalog_category_lending') }}/{{ category.fullPath }}">
                            <img src="{{ category.uploadPath }}{{ category.image }}" alt="{{ category.name }}">
                            <div class="categories-tem-name">{{ category.name }}</div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}