{% block stylesheets %}
    <style>
        h1 {
            font-size: 36px;
        }

        .page-header {
            margin-top: 0;
        }

        @media (min-width: 768px) {

            .page-header {
                margin-bottom: 0;
            }
        }

        @media (max-width: 767px) {
            body{
                padding-top: 100px;
            }
        }
        .search-box-xs{
            position: fixed;
            width: auto;
            right: 10px;
            left: 10px;
            top: 56px;
            z-index: 1001;
        }
    </style>
{% endblock %}

<div class="visible-sm visible-xs mt1 search-box-xs">
    <form role="search" id="search" action="{{ path('search') }}" method="get">
        <div class="input-group">
            <input type="text" name="query" value="{{ searchQuery | default('') }}" class="form-control"
                   placeholder="Поиск..."/>
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="fa fa-search"> </i></button>
            </span>
        </div>
    </form>
</div>

<div class="col-md-9 col-md-offset-3 hidden-sm hidden-xs">
    <div class="page-header">
        <h1>{{ pageHeader | default('Каталог продукции') }}</h1>
    </div>
</div>