{% extends '@layout/default.html.twig' %}
{% set pageHeader = page.title | default('Контакты') %}

{% block title %}
    {{ pageHeader }}
{% endblock %}

{% block pageHeader %}
    {{ include('@layout/components/_pageHeader.twig') }}
{% endblock %}

{% block sidebar %}
    <div class="col-md-3">
        <div class="sidebar">
            {{ include('@app/components/_contact_sidebar.twig') }}
        </div>
    </div>
{% endblock %}
{% block content %}
    <div class="col-md-9">
        <ul class="nav nav-pills contact" role="tablist">
            <li role="presentation" class="pill-item active"><a href="#map" class="btn-alpha default" aria-controls="map" role="tab" data-toggle="tab">Карта Яндекс</a></li>
            <li role="presentation" class="pill-item"><a href="#scheme" class="btn-alpha default" aria-controls="scheme" role="tab" data-toggle="tab">Схема проезда</a></li>
            <li role="presentation" class="pill-item hidden-xs"><a href="{{ asset('files/pdf/alpha_hydro_map.pdf') }}" class="btn-alpha default" target="_blank">Печать (pdf)</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="map">
                <div id="yandexMap" class="yandexMap"></div>
            </div>
            <div role="tabpanel" class="tab-pane" id="scheme">
                <img src="{{ asset('files/images/map-access.png') }}" alt="Схема проезда">
            </div>
        </div>
    </div>
{% endblock %}

{% block javascriptHead %}
    <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Ab87a0fcca7702167f43a35bf25382579aecfc316e760b4893254a7d5e2259d56&amp;lang=ru_RU&amp;scroll=false&amp;id=yandexMap"></script>
{% endblock %}

