{% extends '@layout/components/_sidebar.twig' %}

{% block sidebarList %}
    <ul class="list-group crop-bottom-shadow">
        <li class="list-group-item sidebar-heading"><span class="span">{{ parentCategory.name | default('Wandfluh')}}</span></li>
        {% for item in sidebarListItem %}
            {% if currentCategory is defined and item.id == currentCategory.id %}
                <li class="list-group-item sidebar-item sidebar-item-current">
                    <span>{{ item.name }}</span>
                </li>
            {% else %}
                <li class="list-group-item sidebar-item">
                    <a href="{{ path('wandfluh.category.list', {'full_path': item.fullPath}) }}">{{ item.name }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}